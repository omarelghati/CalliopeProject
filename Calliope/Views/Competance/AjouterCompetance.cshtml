@model Calliope.Models.App.Competance

@{
    ViewBag.Title = "AjouterCompetance";
    Layout = "~/Views/Competance/_Layout.cshtml";
}

<h2>@ViewBag.Discipline.nomDiscipline</h2>

@using (Html.BeginForm("AjouterCompetance", "Competance", FormMethod.Post, new { role = "form" })) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Ajouter une compétance</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.nomCompetance, "Nom de la compétance", htmlAttributes: new { @class = "control -label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.nomCompetance, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessage("error", new { @class = "text-danger" })
                @Html.ValidationMessage("success", new { @class = "text-success" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
                    }

<div>
    <a href="javascript:history.go(-1)">Revenir</a>
</div>
