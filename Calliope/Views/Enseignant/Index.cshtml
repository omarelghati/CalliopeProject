@model Calliope.Models.App.Enseignant
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Enseignant/_Layout.cshtml";
}
@{ var enseignant = Model;}
<h1 class="page-header">Bonjour, @enseignant.nomComplet</h1>
<div class="row">
    <div class="col-lg-4 col-md-12">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-user fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@Session["counter"]</div>
                        <div>Elèves</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-12">
        <div class="panel panel-green">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-group fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@enseignant.Groupes.Count</div>
                        <div>Groupes</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-4 col-md-12">
        <div class="panel panel-yellow">
            <div class="panel-heading">
                <div class="row">
                    <div class="col-xs-3">
                        <i class="fa fa-clipboard fa-5x"></i>
                    </div>
                    <div class="col-xs-9 text-right">
                        <div class="huge">@enseignant.EvaluationCollectives.Count</div>
                        <div>Evaluations</div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
<div class="row">
    <div class="col-md-6 col-md-offset-2">
        @using (Html.BeginForm("Index", "Enseignant", FormMethod.Post, new {  @class="form-horizontal",role = "form" }))
        {
          <fieldset>
            <!-- Form Name -->
            <legend>Vos informations personnelles</legend>
            <!-- Text input-->
              @Html.ValidationMessage("error", new { @class = "text-danger" })
            <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Nom complet</label>
                <div class="col-sm-10">
                    <input type="text" name="nomComplet" value="@enseignant.nomComplet" class="form-control">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">E-mail</label>
                <div class="col-sm-10">
                    <input type="email"  name="email" Value="@enseignant.email" class="form-control">
                </div>
            </div>
            <!-- Text input-->
            <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Téléphone Mobile</label>
                <div class="col-sm-10">
                    <input type="text" name="phone" value="@enseignant.phone" class="form-control">
                </div>
            </div>
            <!-- Text input-->   
            <div class="form-group">
                <label class="col-sm-2 control-label" for="textinput">Civilité</label>
                <div class="col-sm-4">
                    <select name="civilite" class="form-control">
                        <option value="Monsieur">Monsieur</option>
                        <option value="Madamme">Madamme</option>
                        <option value="Mademoiselle">Mademoiselle</option>
                    </select>
                </div>
                <div class="col-sm-offset-2">
                    @Html.HiddenFor(m => m.Id)
                        <input type="submit" value="Enregistrer" class=" pull-right btn btn-primary col-sm-3" />
                </div>
            </div>
         </fieldset>
        }
        </div><!-- /.col-lg-12 -->
</div>