@model Calliope.ViewModels.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
@Styles.Render("~/Content/LoginStyle.css")

<div class="wrapper">
    @using (Html.BeginForm("Register", "user", FormMethod.Post, new { @class = "form-signin", style="color:white",role = "form" }))
    {
        @Html.AntiForgeryToken()
        <center>
            <h3 style="color:white">Fiche d'inscription</h3>
            <hr class="colorgraph"><br />
                <div class="form-group">
                    @Html.TextBoxFor(m => m.nomComplet, new { @class = "form-control", @placeholder = "Nom complet.." })
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m =>m.email, new { @class = "form-control" ,type="email", @placeholder = "Adresse E-mail.."})
                </div>
                <div class="form-group">
                    @Html.TextBoxFor(m => m.phone, new { @class = "form-control", @placeholder = "Numéro du téléphone" })
                </div>
                    @Html.ValidationMessageFor(model => model.phone)
            <div class="form-group">
                @Html.PasswordFor(m => m.password, new { @class = "form-control" , @placeholder = "Mot de passe.." })
            </div>
            @Html.ValidationMessageFor(model => model.password)
            <div class="form-group">
                @Html.PasswordFor(m => m.confirmPassword, new { @class = "form-control" , @placeholder = "Confirmation du mot de passe.."})
            </div>
            @Html.ValidationMessageFor(model => model.confirmPassword)
            <div class="form-group">
                @Html.LabelFor(m => m.selectedCivility, "Civilité :")
               @Html.DropDownListFor(m => m.selectedCivility, new SelectList(Model.civilite,"Value","Text"), new { @class="form-control"})
            </div>
            <div class="form-group">
                @Html.LabelFor(m =>m.selectedType,"Voues étes :")
                @Html.DropDownListFor(m => m.selectedType, new SelectList(Model.type, "Value", "Text"), new { @class = "form-control" })
            </div>
            <div class="form-group">
                <input type="submit" class="col-md-offset-2 btn btn-primary center-block" value="S'inscrire" />
            </div>
        </center>
    }
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
