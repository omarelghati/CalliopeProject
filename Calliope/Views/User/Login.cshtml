@model Calliope.ViewModels.LoginViewModel  
 @{
        ViewBag.Title = "Connexion";
        Layout = "~/Views/Shared/_Layout.cshtml";
    }
    @Styles.Render("~/Content/LoginStyle.css")
    <div class="container">
        <div class="wrapper">
            @using (Html.BeginForm("Login", "user", FormMethod.Post, new { @class = "form-signin", role = "form" }))
            {
                @Html.AntiForgeryToken()
                <h3 class="form-signin-heading">Authentification</h3>
                <hr class="colorgraph"><br>
                <center>
                   @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.email, new { @class = "form-control", @placeholder = "Adresse E-mail.." })
                    </div>
                    <div class="form-group">
                        @Html.PasswordFor(m => m.password, new { @class = "form-control", @placeholder = "Mot de passe.." })
                    </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.type, "Voues étes :", new { @style="color:white;" })
                    @Html.DropDownListFor(m => m.selectedType, new SelectList(Model.type, "Value", "Text"), new { @class = "form-control" })
                </div>
                <input class="btn btn-md btn-success" name="Submit" value="S'authentifier" type="Submit" /> <br/><br/>
                    <div class="form-group">
                        <label for="register" style="color:white;">Vous n'avez pas encore un compte ?</label>
                        @Html.ActionLink("inscrivez-vous", "Register", "User", new { area = "" }, new { @class = "" })
                    </div>
                </center>
            }
        </div>
    </div>