@model Calliope.ViewModels.Administration.CreerGroupeViewModel

@{
    ViewBag.Title = "CreerGroupe";
    Layout = "~/Views/Administration/_Layout.cshtml";
}

<h2>Créer un Groupe</h2>

<div class="row">
    @using (Html.BeginForm("CreerGroupe", "Administration", FormMethod.Post, new { @class = "col-md-6 col-md-offset-2", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                @Html.LabelFor(model => model.Groupe.nomGroupe,"Nom du groupe", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Groupe.nomGroupe, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Groupe.nomGroupe, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Groupe.nomGroupe, "Niveau", htmlAttributes: new { @class = "control-label col-md-4" })
                <div class="col-md-8">
                    <select name="selectedNiveau" class="form-control">
                        @foreach (var niv in Model.Niveaux)
                        {
                            <option value="@niv.Id">@niv.niveau</option>
                        }
                    </select>
                </div>
            </div>
            <a   style="margin-right:10px;" class="pull-left" href="@Url.Action("Groupes")">
                <div class="btn btn-default">Revenir</div>
            </a>
                <div style="margin-left:10px;">
                    <input type="submit" value="Create" class="btn btn-primary" />
                    @Html.ValidationMessage("success_groupe", new { @class = "text-success" })
                </div>
        </div>
    }
</div>
