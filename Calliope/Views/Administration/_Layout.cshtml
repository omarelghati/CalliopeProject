
@{if (Session["administration"] == null)
    {
        Response.Redirect("/User/Login");
    }
}
<!doctype html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/css/sb-admin.css" rel="stylesheet" />
    <link href="~/Content/plugins/morris.css" rel="stylesheet" />
    <link href="~/Content/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    @{ Calliope.Models.App.Administration administration = (Calliope.Models.App.Administration)HttpContext.Current.Session["administration"]; }
    @*<select>
            @foreach (var discipline in Model)
            {
                <option value="@discipline.Id">@discipline.nomDiscipline</option>
            }
        </select>*@
    <div id="wrapper">
        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <!-- Brand and toggle get grouped for better mobile display -->
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-ex1-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <img src="~/Content/Calliope.png" width="30px" height="30px" style="float:left;margin-top:8px;" />
                <a class="navbar-brand" href="@Url.Action("Index","Administration")">Calliope</a>
            </div>
            <!-- Top Menu Items -->
            <ul class="nav navbar-right top-nav">
                <li class="dropdown">
                    <a>@administration.nomComplet</a>
                </li>
                <li class="nav-item"><a href="@Url.Action("Logout","User")" class="nav-link logout">Se déconnecter&nbsp;&nbsp;<i class="fa fa-sign-out"></i></a></li>
            </ul>
            <!-- Sidebar Menu Items - These collapse to the responsive navigation menu on small screens -->
            <div class="collapse navbar-collapse navbar-ex1-collapse navbar-custom">
                <ul class="nav navbar-nav side-nav">
                    <li class="active">
                        <a href="@Url.Action("Groupes")"><i class="fa fa-fw fa-tasks"></i>&nbsp;Gestion des groupes</a>
                    </li>
                    <li class="active">
                        <a href="@Url.Action("Plannification")"><i class="fa fa-fw fa-building"></i>&nbsp;Plannification</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div id="page-wrapper">
            @RenderBody()
        </div>
    </div>
        <script src="~/Content/js/jquery-3.2.1.min.js"></script>
        <script src="~/Content/morris/morris-data.js"></script>
        <script src="~/Content/morris/morris.min.js"></script>
        <script src="~/Content/morris/raphael.min.js"></script>
        <script src="~/Content/js/bootstrap.min.js"></script>
</body>
</html>